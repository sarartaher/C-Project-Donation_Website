@page
@model Donation_Website.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<!-- Reset Password Form -->
<section class="d-flex justify-content-center align-items-center vh-100">
    <div class="card text-center p-5 shadow-lg login-card rounded-4 h-50">
        <div class="card-body">
            <h3 class="card-title my-4 text-uppercase fw-bold site-title">United Charity Hub</h3>
            <form method="post" class="p-3 my-auto">
                <div class="mb-4">
                    <input type="email"  class="form-control input-box" placeholder="Enter your email" required>
                </div>
                <div class="mb-4">
                    <input type="password"  class="form-control input-box" placeholder="Enter new password" required>
                </div>
                <div class="mb-4">
                    <input type="password"  class="form-control input-box" placeholder="Confirm new password" required>
                </div>
                <button type="submit" class="btn rounded-4 px-5 login-btn fw-bold mt-3">Reset Password</button>
                <div class="text-danger mt-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            </form>
        </div>
    </div>
</section>
