@page
@model Donation_Website.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<section class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4" style="min-width: 380px; max-width: 420px;">
        <h3 class="text-center mb-4">Reset Password</h3>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
        <div class="alert alert-info text-center">@Model.Message</div>
        }

        <form method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            @if (HttpContext.Session.GetString("_OTP") != null)
            {
            <div class="mb-3">
                <label asp-for="OTP" class="form-label">OTP</label>
                <input asp-for="OTP" class="form-control" placeholder="Enter OTP" />
                <span asp-validation-for="OTP" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">New Password</label>
                <input asp-for="NewPassword" class="form-control" placeholder="Enter new password" type="password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Reset Password</button>
            }
            else
            {
            <button type="submit" class="btn btn-primary w-100">Send OTP</button>
            }
        </form>
    </div>
</section>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
