@page
@model Donation_Website.Pages.VolunteerDashboardModel
@{
    ViewData["Title"] = "Volunteer Dashboard";
    var userName = Model.HttpContext.Session.GetString("UserName");
}

<section class="p-5">
    <!-- Header -->
    <header class="bg-white shadow-sm p-4 rounded-3 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 fw-bold text-dark mb-0">Volunteer Dashboard</h1>
            <div class="d-flex align-items-center gap-3">
                <span class="text-muted text-center">Hello, <strong>@userName</strong></span>
                <a href="/" class="btn btn-primary">Go to Home</a>
                <form method="post" asp-page="/Logout" class="d-inline">
                    <button type="submit" class="btn btn-danger">Logout</button>
                </form>
            </div>
        </div>
    </header>

    <!-- Overview -->
    <div class="bg-white shadow-sm rounded-3 p-4 mb-5">
        <h2 class="h4 fw-semibold text-dark mb-3">System Overview</h2>
        <p class="text-muted lh-base">
            From here, you can manage your profile and availability, track assignments with hours and statuses,
            access tasks and events, receive emergency alerts, communicate with admins/teams,
            and view your field contributions. You can also check transparent operational cost reports.
        </p>
    </div>

    <!-- Feature Grid -->
    <div class="row g-4">

        <div class="col-12 col-md-6 col-xl-4">
            <div class="card h-100 border-0" style="background-color: #dbeafe;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Profile & Availability</h5>
                    <p class="card-text text-dark">Manage your profile, skills, and availability status.</p>
                    <div class="mt-auto">
                        <button class="btn btn-primary">Edit Profile</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-4">
            <div class="card h-100 border-0" style="background-color: #fee2e2;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Task & Event List</h5>
                    <p class="card-text text-dark">Access all tasks and upcoming project events.</p>
                    <div class="mt-auto">
                        <button class="btn btn-danger">View Tasks</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-4">
            <div class="card h-100 border-0" style="background-color: #fef3c7;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Emergency Alerts</h5>
                    <p class="card-text text-dark">Receive admin-initiated emergency notifications.</p>
                    <div class="mt-auto">
                        <button class="btn btn-warning">View Alerts</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-4">
            <div class="card h-100 border-0" style="background-color: #f3e8ff;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Messaging</h5>
                    <p class="card-text text-dark">Communicate with admins and teams via threaded chat.</p>
                    <div class="mt-auto">
                        <button class="btn" style="background-color: #8b5cf6; color: white;">Open Chat</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

