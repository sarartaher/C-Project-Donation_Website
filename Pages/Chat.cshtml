@page
@model Donation_Website.Pages.ChatModel
@{
    ViewData["Title"] = "Team Chat";
}
<section class="container py-5">
    <h2 class="mb-4 text-center">Volunteer Chat</h2>
    <div class="card shadow-sm">
        <div class="card-body" style="height:400px;overflow-y:auto;">
            @foreach (var m in Model.Messages)
            {
                <p><strong>@m.User:</strong> @m.Msg <small class="text-muted">@m.Time.ToShortTimeString()</small></p>
            }
        </div>
        <form method="post" class="card-footer d-flex gap-2">
            <input type="text" name="text" class="form-control" placeholder="Type a message..." required />
            <button class="btn btn-primary" asp-page-handler="Send">Send</button>
        </form>
    </div>
</section>