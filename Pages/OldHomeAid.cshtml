@page
@model Donation_Website.Pages.OldHomeAidModel
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Old People Aid";
}

<!-- Hero Section -->
<section class="Old-hero p-5 text-white d-flex align-items-center">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">Donate For the Old Age People</h1>
        <h3 class="fs-5 mt-3">Providing comfort and dignity to our elders.</h3>
    </div>
</section>

<!-- Quote Section -->
<section class="Old-qoute p-5 text-center text-white d-flex align-items-center">
    <div class="container">
        <h2 class="display-5 fw-bold mb-4">Quotes from the Quran</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <p class="fs-5">
                    "And your Lord has decreed that you shall not worship except Him, and to your parents, you shall be kind." <br> <span class="fw-bold">- Surah Al-Isra, 17:23</span>
                </p>
            </div>
            <div class="col-md-4">
                <p class="fs-5">
                    "And lower to them the wing of humility out of mercy and say, 'My Lord, have mercy upon them as they brought me up when I was small.'" <br> <span class="fw-bold">- Surah Al-Isra, 17:24</span>
                </p>
            </div>
            <div class="col-md-4">
                <p class="fs-5">
                    "The best among you are those who are best to their families." <br> <span class="fw-bold">- Prophet Muhammad (ﷺ)</span>
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Story Section -->
<section class="Old-story p-5">
    <div class="container text-center">
        <h2 class="display-5 fw-bold mb-5">Stories</h2>
        <div class="row g-4 justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card p-4 shadow-sm h-100">
                    <img src="/Assets/Old man smiling.jpg" class="card-img-top mb-3 rounded" alt="Elderly person smiling">
                    <h5 class="fw-bold">A Second Chance at Life</h5>
                    <p class="card-text">
                        Read the inspiring story of how our support provided a new home and a fresh start for an elder in need.
                    </p>
                    <a href="https://www.helpage.org/what-we-do/rights-of-older-people/" class="btn btn-dark mt-auto">Read More</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card p-4 shadow-sm h-100">
                    <img src="~/Assets/Old person receiving care .jpg" class="card-img-top mb-3 rounded" alt="Elderly person receiving care">
                    <h5 class="fw-bold">The Gift of Companionship</h5>
                    <p class="card-text">
                        Discover how our volunteers bring joy and companionship to lonely elders, proving that a helping hand is invaluable.
                    </p>
                    <a href="https://www.worldpackers.com/articles/companionship-care" class="btn btn-dark mt-auto">Read More</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card p-4 shadow-sm h-100">
                    <img src="~/Assets/group of old people.webp" class="card-img-top mb-3 rounded" alt="Group of elderly people">
                    <h5 class="fw-bold">Building a Community</h5>
                    <p class="card-text">
                        Learn how your donations are helping us create safe and vibrant communities for our senior residents.
                    </p>
                    <a href="https://www.thelutheranhome.org/guide-to-fostering-community-in-senior-living/" class="btn btn-dark mt-auto">Read More</a>
                </div>
            </div>
        </div>
        <div class="mt-5">
            <a asp-page="/Donation" asp-route-fundraiserId="2" class="btn btn-lg btn-primary rounded-pill px-5">Donate Now</a>
        </div>
    </div>
</section>