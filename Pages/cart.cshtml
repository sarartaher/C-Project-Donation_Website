@page
@model Donation_Website.Pages.cartModel
@using Donation_Website.Models
@{
    ViewData["Title"] = "Cart";
    var userName = Model.HttpContext.Session.GetString("UserName");
}

<section class="h-100">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <!-- LEFT SIDE (Donation List) -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Your Donations</h5>
                        <a class="btn btn-sm btn-primary" asp-page="/Donation">
                            <i class="fas fa-plus"></i> Add More Donation
                        </a>
                    </div>
                    <div class="card-body" id="donationListA">
                        @if (Model.Donations?.Count > 0)
                        {
                            @foreach (var donation in Model.Donations)
                            {
                                <div class="row mb-4 donation-item" data-cart-item-id="@donation.CartItemsId">
                                    <div class="col-lg-3 col-md-12 mb-3">
                                        <img src="/images/default.jpg" class="w-100 rounded" alt="Donation Event" />
                                    </div>
                                    <div class="col-lg-9 col-md-12 mb-3">
                                        <p><strong>@donation.EventName</strong></p>
                                        <p>Secret Name: @donation.SecretName</p>
                                        <p>Amount: @(donation.Amount.HasValue ? $"BDT{donation.Amount.Value:0.00}" : "BDT0.00")</p>
                                        <p>Date: <span class="text-muted">@donation.Date.ToString("yyyy-MM-dd hh:mm tt")</span></p>
                                        <!-- Actions -->
                                        <button class="btn btn-sm btn-danger deleteBtn" data-cart-item-id="@donation.CartItemsId">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-center text-muted">No donations found. Add some donations first.</p>
                        }
                    </div>
                </div>
            </div>

            <!-- RIGHT SIDE (Payment & Summary) -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Selected Donations</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group mb-3" id="selectedList">
                            @foreach (var donation in Model.Donations ?? Enumerable.Empty<DonationViewModel>())
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@donation.EventName</span>
                                    <strong>@(donation.Amount.HasValue ? $"BDT{donation.Amount.Value:0.00}" : "BDT0.00")</strong>
                                </li>
                            }
                        </ul>

                        <!-- Subtotal & Total -->
                        <ul class="list-group mb-3">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Subtotal</span>
                                <strong>BDT<span id="subTotal">@Model.SubTotal.ToString("0.00")</span></strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Total</span>
                                <strong>BDT<span id="totalAmount">@Model.TotalAmount.ToString("0.00")</span></strong>
                            </li>
                        </ul>

                        <!-- Payment Methods -->
                        <form method="post" asp-page-handler="Checkout">
                            <input type="hidden" asp-for="APaymentId" />
                            <input type="hidden" asp-for="FundraiserId" />
                            <input type="hidden" asp-for="Amount"/>
                            <h6 class="mb-3">Payment Method</h6>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="mobilePay" value="Mobile" checked />
                                <label class="form-check-label" for="mobilePay">Mobile Payment (bKash / Nagad / PayPal)</label>
                            </div>
                            <div class="form-check mb-4">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="cardPay" value="Card" />
                                <label class="form-check-label" for="cardPay">Card Payment (Visa / Mastercard)</label>
                            </div>

                            <button type="submit" class="btn btn-success w-100 mb-2" id="donationDoneBtn">
                                Donation Done
                            </button>
                        </form>

                        <!-- Download Receipt -->
                        <a class="btn btn-outline-primary w-100"
                           asp-page-handler="DownloadReceipt"
                           asp-route-cartId="@Model.Donations.FirstOrDefault()?.CartId">
                            <i class="fas fa-file-invoice"></i> Download Receipt (PDF)
                        </a>



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const donationList = document.getElementById('donationList');
        const subTotalElement = document.getElementById('subTotal');
        const totalAmountElement = document.getElementById('totalAmount');

        function updateTotals() {
            let subTotal = 0;
            donationList.querySelectorAll('.donation-item').forEach(item => {
                const amountText = item.querySelector('p:nth-child(3)').textContent.match(/BDT([\d.]+)/);
                if (amountText) subTotal += parseFloat(amountText[1]);
            });
            subTotalElement.textContent = subTotal.toFixed(2);
            totalAmountElement.textContent = subTotal.toFixed(2);
        }

        updateTotals();

        // Delete Cart Item
        donationList.addEventListener('click', (e) => {
            const btn = e.target.closest('.deleteBtn');
            if (!btn) return;

            const cartItemId = btn.getAttribute('data-cart-item-id');

            fetch(`/cart?handler=Remove`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `cartItemId=${cartItemId}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) location.reload();
                else alert(data.message || 'Error deleting item.');
            });
        });
    });
</script>