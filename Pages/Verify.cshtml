@page
@model Donation_Website.Pages.VerifyModel
@{
    ViewData["Title"] = "Volunteer Verification";
}

<section class="container mt-4">
    <h2 class="mb-3">Volunteer Verification</h2>
    <p class="mb-4">Verify and track volunteer activities.</p>

    <!-- Search Box -->
    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search by Name" onkeyup="filterTable()">
    </div>

    <h3 class="mt-5 mb-3">Verified Volunteers</h3>
    <table class="table table-bordered table-hover text-center" id="volunteerTable">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Skill</th>
                <th>Availability</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model.Volunteer)
            {
                <tr>
                    <td>@v.Name</td>
                    <td>@v.Email</td>
                    <td>@v.Phone</td>
                    <td>@v.Address</td>
                    <td>@v.Skill</td>
                    <td>@v.Availability</td>
                    <td class="fw-bold @v.StatusClass">@v.Status</td>
                </tr>
            }
        </tbody>
    </table>

    <h3 class="mt-5 mb-3">Pending Applications</h3>
    @if (Model.PendingApplications.Any())
    {
        <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Volunteer Name</th>
                    <th>Project Title</th>
                    <th>Application Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var app in Model.PendingApplications)
                {
                    <tr>
                        <td>@app.VolunteerName</td>
                        <td>@app.ProjectTitle</td>
                        <td>@app.ApplicationDate.ToShortDateString()</td>
                        <td>
                            <form method="post" asp-page-handler="Accept" asp-route-volunteerId="@app.VolunteerID" asp-route-projectId="@app.ProjectID">
                                <button type="submit" class="btn btn-success">Accept</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No pending applications.</p>
    }
</section>

<script>
    function filterTable() {
        var input = document.getElementById("searchInput");
        var filter = input.value.toUpperCase();
        var table = document.getElementById("volunteerTable");
        var tr = table.getElementsByTagName("tr");

        for (var i = 1; i < tr.length; i++) {
            var td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                var txtValue = td.textContent || td.innerText;
                tr[i].style.display = txtValue.toUpperCase().indexOf(filter) > -1 ? "" : "none";
            }
        }
    }
</script>
