@page
@model Donation_Website.Pages.OrphanageModel
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Orphanage";
}

<!-- Header Section -->
<section class="orphan-home d-flex flex-column justify-content-center align-items-center text-center">
    <h1>Supporting Orphans</h1>
    <h3>Because every child deserves love and care</h3>
</section>

<!-- Quranic Verses Section -->
<section class="orphan-qou text-light py-5">
    <div class="container">
        <h1 class="text-center mb-4">Quranic Verses for Orphans</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <p class="mb-3">1. <strong>“And they ask you about orphans. Say, ‘Improvement for them is best…’”</strong> (Surah Al-Baqarah 2:220)</p>
                <p class="mb-3">2. <strong>“So as for the orphan, do not oppress [him]…”</strong> (Surah Ad-Duha 93:9)</p>
                <p class="mb-3">3. <strong>“Indeed, those who devour the property of orphans unjustly are only consuming fire into their bellies…”</strong> (Surah An-Nisa 4:10)</p>
            </div>
        </div>
    </div>
</section>

<!-- Blog Section -->
<section class="orphan-blogs py-5">
    <div class="container">
        <h1 class="text-center mb-5">Related Blog Topics</h1>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="~/Assets/mission.png" class="card-img-top" alt="Orphan Care">
                    <div class="card-body">
                        <h5 class="card-title">How to Support Orphans</h5>
                        <p class="card-text">Practical ways you can help orphans through donations and volunteering.</p>
                        <a asp-page="/Donation" asp-route-fundraiserId="1" class="btn btn-primary">Donate Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="~/Assets/Education.png" class="card-img-top" alt="Education for Orphans">
                    <div class="card-body">
                        <h5 class="card-title">Education for Orphans</h5>
                        <p class="card-text">Providing education to orphans ensures they have a brighter future.</p>
                        <a asp-page="/Donation" asp-route-fundraiserId="1" class="btn btn-primary">Donate Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="~/Assets/TGaza2.png" class="card-img-top" alt="Health Support">
                    <div class="card-body">
                        <h5 class="card-title">Health Support</h5>
                        <p class="card-text">Medical care and regular checkups help orphans stay healthy.</p>
                        <a asp-page="/Donation" asp-route-fundraiserId="1" class="btn btn-primary">Donate Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>