@page
@model Donation_Website.Pages.DonorProfileModel
@{
    ViewData["Title"] = "Donor Profile";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Donor Profile</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success">@Model.SuccessMessage</div>
                    }

                    <form method="post" asp-page-handler="Update">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Name:</label>
                            <input type="text" class="form-control" asp-for="CurrentDonor.Name" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email (cannot change):</label>
                            <input type="email" class="form-control" asp-for="CurrentDonor.Email" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Phone:</label>
                            <input type="text" class="form-control" asp-for="CurrentDonor.Phone" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Address:</label>
                            <input type="text" class="form-control" asp-for="CurrentDonor.Address" />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Update Profile</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-primary" href="@Url.Page("/DonorDashboard")">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</section>
