@page "{id?}"
@model Donation_Website.Pages.DonorProfileModel
@{
    ViewData["Title"] = "Donor Profile";
}
<section class="container py-5">
    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-dark">My Profile</h1>
        <p class="text-muted">View and manage your personal donor information.</p>
    </div>
    <!-- Profile Card -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow border-0 rounded-3">
                <div class="card-body text-center p-4">
                    <!-- Profile Picture -->
                    <img src="https://cdn-icons-png.flaticon.com/512/2202/2202112.png"
                         alt="Donor Profile"
                         class="rounded-circle mb-3"
                         width="120" height="120">
                    <!-- Donor Info -->
                    <h3 class="fw-semibold">@Model.Name</h3>
                    <p class="text-muted mb-1"><i class="bi bi-envelope"></i> @Model.Email</p>
                    <p class="text-muted mb-1"><i class="bi bi-telephone"></i> @Model.Phone</p>
                    <p class="text-muted mb-1"><i class="bi bi-geo-alt"></i> @Model.Address</p>
                    <p class="text-muted">
                        <i class="bi bi-calendar"></i> Member since
                        @Model.CreatedAt
                    </p>
                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bstarget="#editProfileModal">
                            <i class="bi bi-pencil-square"></i> Edit Profile
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1" arialabelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post">
                <input type="hidden" asp-for="DonorID" />
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" arialabel="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Name -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <!-- Phone -->
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" />
                    </div>
                    <!-- Address -->
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bsdismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
