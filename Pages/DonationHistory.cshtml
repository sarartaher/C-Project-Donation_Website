@page
@model Donation_Website.Pages.Donations.DonationHistoryModel
@{
    ViewData["Title"] = "Donation History";
}
<div class="container py-5">
    <h2 class="text-primary fw-bold mb-4">Donation History</h2>

    <form method="get" class="card shadow-sm p-3 mb-4">
        <div class="row g-3 align-items-end">
            <!-- Search -->
            <div class="col-md-3">
                <label class="form-label" for="search">Search</label>
                <input type="text" id="search" name="Search"
                       value="@Model.Search"
                       class="form-control" placeholder="Search donations...">
            </div>

            <!-- Date -->
            <div class="col-md-3">
                <label class="form-label" for="date">Date</label>
                <input type="date" id="date" name="Date"
                       value="@(Model.Date?.ToString("yyyy-MM-dd"))"
                       class="form-control">
            </div>

            <!-- Amount Min/Max -->
            <div class="col-md-3">
                <label class="form-label" for="minAmount">Amount (Min)</label>
                <input type="number" id="minAmount" name="MinAmount"
                       value="@(Model.MinAmount?.ToString())"
                       class="form-control" placeholder="Min amount" min="0" step="0.01">
            </div>
            <div class="col-md-3">
                <label class="form-label" for="maxAmount">Amount (Max)</label>
                <input type="number" id="maxAmount" name="MaxAmount"
                       value="@(Model.MaxAmount?.ToString())"
                       class="form-control" placeholder="Max amount" min="0" step="0.01">
            </div>

            <!-- Event Filter (multi-select from donor's real events) -->
            <div class="col-md-6">
                <label class="form-label" for="eventFilter">Event Name</label>
                <select id="eventFilter"
                        class="form-select"
                        asp-for="Events"
                        asp-items="Model.EventSelectList"
                        multiple>
                </select>
                <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple</small>
            </div>

            <!-- Actions -->
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Apply</button>
            </div>
            <div class="col-md-2">
                <a class="btn btn-secondary w-100" href="@Url.Page(null)">Reset</a>
            </div>
        </div>
    </form>

    <!-- Donation History Table -->
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle">
            <thead class="table-primary">
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Time</th>
                    <th scope="col">Event Name</th>
                    <th scope="col">Amount (৳)</th>
                </tr>
            </thead>
            <tbody>
                @if (!(Model.Records?.Any() ?? false))
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">No donations found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var r in Model.Records)
                    {
                        <tr>
                            <td>@r.Date.ToString("yyyy-MM-dd")</td>
                            <td>@r.Date.ToString("hh:mm tt")</td>
                            <td>@r.EventName</td>
                            <td>@r.Amount.ToString("N2")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>