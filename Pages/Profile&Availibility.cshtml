@page
@model Donation_Website.Pages.Profile_AvailabilityModel
@{
    ViewData["Title"] = "Profile & Availability";
}
<section class="container py-5">
    <h2 class="mb-4 text-center">Profile & Availability</h2>
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success">@TempData["msg"]</div>
    }
    <form method="post" class="col-md-6 mx-auto">
        <div class="mb-3">
            <label>Name</label>
            <input class="form-control" value="@Model.VolunteerInfo.Name" readonly />
        </div>
        <div class="mb-3">
            <label>Phone</label>
            <input class="form-control" asp-for="VolunteerInfo.Phone" />
        </div>
        <div class="mb-3">
            <label>Skills</label>
            <input class="form-control" asp-for="VolunteerInfo.Skill" />
        </div>
        <div class="mb-3">
            <label>Availability</label>
            <select class="form-select" asp-for="VolunteerInfo.Availability">
                <option>Full-Time</option>
                <option>Part-Time</option>
                <option>Weekends</option>
                <option>On Call</option>
            </select>
        </div>
        <button class="btn btn-primary">Save Changes</button>
    </form>
</section>