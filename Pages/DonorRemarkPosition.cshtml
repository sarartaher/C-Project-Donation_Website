@page
@model Donation_Website.Pages.DonorRemarkPositionModel
@{
    ViewData["Title"] = "Donor Remarkable Position";
}

<section class="p-5">
    <!-- Header -->
    <header class="bg-white shadow-sm p-4 rounded-3 mb-4">
        <div class="text-center">
            <h1 class="h3 fw-bold text-dark mb-0">Donor Remarkable Position</h1>
            <p class="text-muted mt-2">
                Track your ranking among donors based on contribution amount and timing.
            </p>
        </div>
    </header>
    <!-- Event Donation Ranking -->
    <div class="bg-white shadow-sm rounded-3 p-4 mb-5">
        <h2 class="h5 fw-semibold text-dark mb-3">Event Donation Ranking</h2>
        <p class="text-muted">Your ranking based on total donation amount per event.</p>
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Event Name</th>
                        <th scope="col">Donor Position</th>
                        <th scope="col">Money (৳)</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example Row -->
                    <tr class="text-center">
                        <td>2025-09-15</td>
                        <td>Flood Relief Fund</td>
                        <td>1st</td>
                        <td>৳10,000</td>
                    </tr>
                    <tr class="text-center">
                        <td>2025-09-10</td>
                        <td>School Building Project</td>
                        <td>3rd</td>
                        <td>৳5,000</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Event Time Ranking -->
    <div class="bg-white shadow-sm rounded-3 p-4">
        <h2 class="h5 fw-semibold text-dark mb-3">Event Time Ranking</h2>
        <p class="text-muted">Your ranking based on donation timing across events.</p>
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Time</th>
                        <th scope="col">Event Name</th>
                        <th scope="col">Time Position</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example Row -->
                    <tr class="text-center">
                        <td>2025-09-15</td>
                        <td>10:05 AM</td>
                        <td>Flood Relief Fund</td>
                        <td>2nd</td>
                    </tr>
                    <tr class="text-center">
                        <td>2025-09-10</td>
                        <td>08:45 PM</td>
                        <td>School Building Project</td>
                        <td>1st</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>
