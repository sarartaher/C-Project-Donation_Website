@page
@model Donation_Website.Pages.DonorRemarkPositionModel
@{
    ViewData["Title"] = "Donor Remark Position";
}

<div class="container py-5">
    <h2 class="mb-4 text-center">Donor Remark Positions</h2>

    <!-- Event Donation Ranking Table -->
    <div class="card mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Event Donation Ranking</h5>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Project Title</th>
                        <th>Donation Amount (BDT)</th>
                        <th>Position</th>
                        <th>Total Money (BDT)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.DonationRanks)
                    {
                        <tr class="table-success">
                            <td>@d.Date.ToString("yyyy-MM-dd")</td>
                            <td>@d.Time.ToString(@"hh\:mm\:ss")</td>
                            <td>@d.ProjectTitle</td>
                            <td>@d.DonationAmount.ToString("N2")</td>
                            <td>@d.Position</td>
                            <td>@d.TotalMoney.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Event Time Ranking Table -->
    <div class="card mb-5">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Event Time Ranking</h5>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Project Title</th>
                        <th>Time Position</th>
                        <th>Donation Amount (BDT)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.TimeRanks)
                    {
                        <tr class="table-info">
                            <td>@t.Date.ToString("yyyy-MM-dd")</td>
                            <td>@t.Time.ToString(@"hh\:mm\:ss")</td>
                            <td>@t.ProjectTitle</td>
                            <td>@t.TimePosition</td>
                            <td>@t.DonationAmount.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
