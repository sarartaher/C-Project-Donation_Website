@page
@model Donation_Website.Pages.SignupModel
@{
    ViewData["Title"] = "Sign Up";
}
<section class="container">
    <div class="row shadow-lg rounded-4 overflow-hidden py-5" style="max-width: 1000px; margin: auto;">

        <!-- Left Panel -->
        <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-center left-panel p-5">

            <!-- Shapes -->
            <div class="shape-circle"></div>
            <i class="bi bi-star-fill shape-star-top"></i>
            <i class="bi bi-star-fill shape-star-bottom"></i>
            <div class="shape-triangle"></div>

            <h2 class="fw-bold text-white mb-4">UNITED CHARITY HUB</h2>
            <h4 class="mb-3">Welcome Back!!!</h4>
            <button class="btn-signin" onclick="location.href='@Url.Page("/Login")'">SIGN IN</button>
        </div>

        <!-- Right Panel -->
        <div class="col-md-6 right-panel p-5">
            <h2 class="fw-bold text-white mb-4 text-center">CREATE ACCOUNT</h2>
            <form method="post">
                <input type="text" asp-for="NewUser.Name" class="form-control form-control-lg mb-3" placeholder="Enter Your Name">
                <input type="email" asp-for="NewUser.Email" class="form-control form-control-lg mb-3" placeholder="Enter Your Email">
                <input type="password" asp-for="NewUser.PasswordHash" class="form-control form-control-lg mb-4" placeholder="Enter Secure Password">
                <input type="text" asp-for="NewUser.Phone" class="form-control form-control-lg mb-3" placeholder="Phone (optional)">
                <input type="text" asp-for="NewUser.Address" class="form-control form-control-lg mb-3" placeholder="Address (optional)">
                <input type="text" asp-for="NewUser.Skill" class="form-control form-control-lg mb-3" placeholder="Skill (optional)">
                

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn-signup">SIGN UP</button>
                </div>
            </form>
        </div>

    </div>
</section>
