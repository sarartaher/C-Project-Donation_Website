@page
@model Donation_Website.Pages.DonorProgressModel
@{
    ViewData["Title"] = "Donor Progress";
}

<div class="container my-5">
    <div class="card shadow-lg border-0">
        <div class="card-header text-center bg-primary text-white">
            <h2 class="mb-0">Your Donation Progress</h2>
        </div>
        <div class="card-body">

            <!-- Total Donation -->
            <div class="text-center mb-4">
                <h4>
                    Total Donated:
                    <span class="fw-bold text-success">৳@Model.TotalDonation.ToString("N2")</span>
                </h4>
                <p class="lead">
                    Current Level:
                    <span class="fw-bold" style="color:@Model.Levels.Find(l => l.Name == Model.CurrentLevel)?.Color">
                        @Model.CurrentLevel
                    </span>
                </p>
            </div>

            <!-- Progress Timeline with Icons -->
            <div class="row justify-content-center">
                @foreach (var level in Model.Levels)
                {
                    var isActive = (level.Name == Model.CurrentLevel);
                    <div class="col-6 col-md-3 col-lg-2 text-center mb-4">
                        <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto"
                             style="width:@(isActive ? "100px" : "70px"); height:@(isActive ? "100px" : "70px");
                                            background-color:@level.Color; color:white;
                                            font-size:@(isActive ? "36px" : "24px");
                                            box-shadow:@(isActive ? "0 0 20px rgba(0,0,0,0.5)" : "0 0 5px rgba(0,0,0,0.2)");">
                            <i class="@level.Icon"></i>
                        </div>
                        <p class="mt-2 fw-bold">@level.Name</p>
                        <small class="text-muted">৳@level.Threshold.ToString("N0")+</small>
                    </div>
                }
            </div>

        </div>
    </div>
</div>

<!-- Make sure Font Awesome is included -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
