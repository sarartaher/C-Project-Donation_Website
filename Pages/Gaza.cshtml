@page
@model Donation_Website.Pages.GazaModel
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Donation For Gaza";
}

<!-- Hero Section -->
<section id="hero-gaza" class="container-fluid d-flex align-items-center justify-content-center text-center text-white p-0">
    <div class="hero-overlay"></div>
    <div class="container p-5">
        <div class="row">
            <div class="col-12">
                <h1 class="display-3 fw-bold mb-4">Support the People of Gaza</h1>
                <p class="fs-5 mb-5">Your donation provides vital aid, medical supplies, and hope to those in need. Stand with us and make a difference today.</p>
                <a asp-page="/Donation" asp-route-fundraiserId="6" class="btn btn-light btn-lg rounded-pill px-4 py-2 fw-bold">Donate Now</a>
            </div>
        </div>
    </div>
</section>

<!-- Donation Section -->
<section id="donation-section" class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8 text-center">
            <div class="p-5 rounded-3" style="background-color: #f8f9fa;">
                <h2 class="display-5 fw-bold mb-3" style="color: #343a40;">Every Contribution Makes a Difference</h2>
                <p class="lead" style="color: #6c757d;">Your generosity is a lifeline for families affected by the crisis. Please consider making a secure donation today to help us continue our mission.</p>
                <a asp-page="/Donation" asp-route-fundraiserId="6" class="btn btn-primary btn-lg rounded-pill px-4 py-2 mt-4">Make a Donation</a>
            </div>
        </div>
    </div>
</section>

<!-- Blog Section -->
<section id="blog-section" class="container py-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-4 fw-bold">Recent Stories & Updates</h2>
            <p class="lead text-muted">Read about the impact of our work and the latest developments on the ground.</p>
        </div>
    </div>
    <div class="row g-4">
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <img src="~/Assets/childTreatment.png" class="card-img-top" alt="Blog Post 1">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Providing Medical Relief</h5>
                    <p class="card-text text-muted">A look inside our efforts to deliver critical medical supplies to hospitals in Gaza.</p>
                    <a href="https://www.unicef.org/emergencies/children-gaza-need-lifesaving-support" class="stretched-link text-decoration-none">Read More</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <img src="/Assets/tGaza.png" class="card-img-top" alt="Blog Post 2">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Stories of Resilience</h5>
                    <p class="card-text text-muted">Discover the inspiring stories of families rebuilding their lives with your support.</p>
                    <a href="https://reliefweb.int/report/occupied-palestinian-territory/famine-gaza-what-you-need-know-now" class="stretched-link text-decoration-none">Read More</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <img src="/Assets/foodGaza(1).png" class="card-img-top" alt="Blog Post 3">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Food and Shelter for Displaced Families</h5>
                    <p class="card-text text-muted">An update on how we are providing emergency food and shelter to those displaced.</p>
                    <a href="https://www.pbs.org/newshour/world/5-things-to-know-about-gazas-worsening-food-crisis" class="stretched-link text-decoration-none">Read More</a>
                </div>
            </div>
        </div>
    </div>
</section>